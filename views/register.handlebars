<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="/images/aguLogo.png" alt="AGU Logo">
            </div>

            <form class="login100-form validate-form" action="/register" method="POST">
                <span class="login100-form-title">
                    {{RegisterTitle}}
                </span>
                <div class="wrap-input100">
                    <input class="input100" name="firstname" type="text" placeholder="{{PlaceholderFirstName}}"
                        {{#if Firstname}}value="{{Firstname}}" {{/if}} />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-id-card" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input class="input100" name="lastname" type="text" placeholder="{{PlaceholderLastName}}"
                        {{#if Lastname}}value="{{Lastname}}" {{/if}} />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-id-card" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input class="input100" type="text" name="username" placeholder="{{PlaceholderUsername}}"
                        {{#if Username}}value="{{Username}}" {{/if}} />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input class="input100" type="text" name="email" placeholder="{{PlaceholderEmail}}"
                        {{#if Email}}value="{{Email}}" {{/if}} />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input class="input100" type="password" name="password1" placeholder="{{PlaceholderPassword}}" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100">
                    <input class="input100" type="password" name="password2"
                        placeholder="{{PlaceholderConfirmPassword}}" />
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        {{btnRegister}}
                    </button>
                </div>

                <div class="text-center p-t-120">
                    <a class="txt2" href="/login">
                        {{LinkToLoginText}}
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>